<Project>
    <PropertyGroup>
        <OutDir>$(SolutionDir)$(Platform)\$(Configuration)\</OutDir>
        <IntDir>$(SolutionDir)$(Platform)\$(Configuration)\</IntDir>
        <TargetExt Condition="'$(ConfigurationType)'=='DynamicLibrary'">.dll</TargetExt>
        <TargetExt Condition="'$(ConfigurationType)'=='StaticLibrary'">.lib</TargetExt>
        <TargetExt Condition="'$(ConfigurationType)'=='Application'">.exe</TargetExt>
    </PropertyGroup>
    <ItemDefinitionGroup>
        <Link>
            <OutputFile Condition="'%(Link.OutputFile)'==''">$(OutDir)$(MSBuildProjectName)$(TargetExt)</OutputFile>
            <AdditionalDependencies>kernel32.lib;user32.lib;gdi32.lib;winspool.lib;comdlg32.lib;advapi32.lib;shell32.lib;ole32.lib;oleaut32.lib;uuid.lib;odbc32.lib;odbccp32.lib;%(AdditionalDependencies)</AdditionalDependencies>
        </Link>
    </ItemDefinitionGroup>
</Project>